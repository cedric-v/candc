{% set t = translations[locale] or translations['pt'] %}

<!-- Hero Section with Background Image -->
<div class="hero-section">
  <div class="hero-background" style="background-image: url('{{ '/assets/img/about-background.jpg' | relativeUrl }}');"></div>
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <h1>{{ t.about.title }}</h1>
    <p>{{ t.about.names }}</p>
  </div>
</div>

<!-- Content Section -->
<section class="content-section">
  <div class="prose">
    <p>{{ t.about.text1 }}</p>
    <p>{{ t.about.text2 }}</p>
    <p>{{ t.about.text3 }}</p>
  </div>
  
  {% include "superhost.njk" %}

  <div class="mt-12 flex flex-wrap justify-center gap-md">
    <a href="{{ ('/' + locale + '/eco-studio/#reservation') | relativeUrl }}" class="btn btn-primary">
      {{ t.bookStudio }}
    </a>
    <a href="{{ ('/' + locale + '/parking/#reservation') | relativeUrl }}" class="btn btn-primary">
      {{ t.bookParking }}
    </a>
  </div>
</section>

