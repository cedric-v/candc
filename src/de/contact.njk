  <div class="section-card p-8 bg-white space-y-6">
    <div>
      <h2 class="text-xl font-semibold text-[#2D5016] mb-3">{{ t.whatsapp }}</h2>
      <a href="https://wa.me/message/J3EROZAQFOSJM1" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-[#25D366] text-white rounded-full font-semibold hover:bg-[#20BA5A] transition-colors shadow-md">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="white"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
        <span>{{ t.whatsapp }}</span>
      </a>
    </div>

    <div class="pt-6 border-t border-[#2D5016]/20">
      <h2 class="text-xl font-semibold text-[#2D5016] mb-3">{{ t.email }}</h2>
      <p class="text-[#0f172a]/80"><a href="#" id="contact-email-link" class="text-[#2D5016] hover:underline font-medium"></a></p>
    </div>

    <div class="pt-6 border-t border-[#2D5016]/20">
      <h2 class="text-xl font-semibold text-[#2D5016] mb-3">{{ t.address }}</h2>
      <p class="text-[#0f172a]/80">La Sonnaz<br>1782 Belfaux<br>Schweiz</p>
    </div>

    <div class="pt-6 border-t border-[#2D5016]/20">
      <h2 class="text-xl font-semibold text-[#2D5016] mb-3">{{ t.sendMessage }}</h2>
      <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="space-y-4">
        <input type="hidden" name="form-name" value="contact">
        <p class="hidden"><label>Nicht ausfüllen: <input name="bot-field" /></label></p>
        <div><label for="name" class="block text-sm font-medium text-[#1f1f1f] mb-2">{{ t.name }}</label><input type="text" id="name" name="name" required class="w-full px-4 py-2 border border-[#2D5016]/30 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2D5016]"></div>
        <div><label for="email" class="block text-sm font-medium text-[#1f1f1f] mb-2">{{ t.email }}</label><input type="email" id="email" name="email" required class="w-full px-4 py-2 border border-[#2D5016]/30 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2D5016]"></div>
        <div><label for="message" class="block text-sm font-medium text-[#1f1f1f] mb-2">{{ t.message }}</label><textarea id="message" name="message" rows="4" required class="w-full px-4 py-2 border border-[#2D5016]/30 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2D5016]"></textarea></div>
        <button type="submit" class="btn-primary bg-[#6B8E23] text-white hover:bg-[#5a7a1d] w-full">{{ t.submit }}</button>
      </form>
    </div>
  </div>
</section>

<script>
  (function() {
    const emailParts = ['bonjour', 'candc', 'ch'];
    const email = emailParts[0] + '@' + emailParts[1] + '.' + emailParts[2];
    const emailLink = document.getElementById('contact-email-link');
    if (emailLink) {
      emailLink.href = 'mailto:' + email;
      emailLink.textContent = email;
    }
  })();
</script>

