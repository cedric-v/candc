  <script>
    (function() {
      const lightbox = document.getElementById('parking-lightbox');
      const lightboxImage = document.getElementById('lightbox-image');
      let lightboxCaption = document.getElementById('lightbox-caption');
      
      // Create caption element if it doesn't exist
      if (!lightboxCaption) {
        lightboxCaption = document.createElement('div');
        lightboxCaption.id = 'lightbox-caption';
        lightboxCaption.className = 'lightbox-caption';
        document.querySelector('.lightbox-container').appendChild(lightboxCaption);
      }

      const closeBtn = document.getElementById('lightbox-close');
      const prevBtn = document.getElementById('lightbox-prev');
      const nextBtn = document.getElementById('lightbox-next');
      const triggers = document.querySelectorAll('.lightbox-trigger');
      
      let currentIndex = 0;
      let activeTriggers = [];
      
      function openLightbox(trigger) {
        const container = trigger.closest('.gallery-grid');
        activeTriggers = Array.from(container.querySelectorAll('.lightbox-trigger'));
        currentIndex = activeTriggers.indexOf(trigger);
        updateLightbox();
        lightbox.classList.add('flex');
        document.body.style.overflow = 'hidden';
      }
      
      function updateLightbox() {
        const trigger = activeTriggers[currentIndex];
        lightboxImage.src = trigger.dataset.image;
        
        const caption = trigger.dataset.caption;
        if (caption) {
          lightboxCaption.textContent = caption;
          lightboxCaption.style.display = 'block';
        } else {
          lightboxCaption.style.display = 'none';
        }
      }
      
      function next() {
        currentIndex = (currentIndex + 1) % activeTriggers.length;
        updateLightbox();
      }
      
      function prev() {
        currentIndex = (currentIndex - 1 + activeTriggers.length) % activeTriggers.length;
        updateLightbox();
      }
      
      triggers.forEach(t => t.addEventListener('click', () => openLightbox(t)));
      
      closeBtn.onclick = () => {
        lightbox.classList.remove('flex');
        document.body.style.overflow = '';
      };
      
      nextBtn.onclick = next;
      prevBtn.onclick = prev;
      
      lightbox.onclick = (e) => {
        if (e.target === lightbox || e.target.classList.contains('lightbox-container')) {
          closeBtn.onclick();
        }
      };
      
      document.onkeydown = (e) => {
        if (!lightbox.classList.contains('flex')) return;
        if (e.key === 'Escape') closeBtn.onclick();
        if (e.key === 'ArrowRight') next();
        if (e.key === 'ArrowLeft') prev();
      };

      // Email protection
      const user = 'bonjour';
      const domain = 'candc';
      const tld = 'ch';
      const email = user + '@' + domain + '.' + tld;
      
      document.querySelectorAll('.email-obfuscated').forEach(el => {
        el.href = 'mailto:' + email;
        const label = el.querySelector('.email-label');
        if (!label) {
          el.textContent = email;
        }
      });
    })();
  </script>
