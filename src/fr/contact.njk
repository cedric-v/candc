        </svg>
        <span>{{ t.whatsapp }}</span>
      </a>
    </div>

    <div class="contact-section">
      <h2>{{ t.email }}</h2>
      <p class="contact-info mb-4">
        <a href="#" class="email-obfuscated"></a>
      </p>
      <div class="contact-actions">
        <a href="#" class="btn btn-primary email-obfuscated">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          <span class="email-label">{{ t.sendMessage }}</span>
        </a>
      </div>
    </div>

    <div class="contact-section">
      <h2>{{ t.address }}</h2>
      <a href="{{ '/fr/location/' | relativeUrl }}" class="btn btn-secondary text-center" style="display: inline-block; text-decoration: none;">
        {{ t.addressButton }}
      </a>
    </div>

  </div>
</section>

