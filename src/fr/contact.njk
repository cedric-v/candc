<script>
  // Protection anti-spam : construction dynamique de l'email
  (function() {
    const user = 'bonjour';
    const domain = 'candc';
    const tld = 'ch';
    const email = user + '@' + domain + '.' + tld;
    
    document.querySelectorAll('.email-obfuscated').forEach(el => {
      el.href = 'mailto:' + email;
      // Only replace text content if it's empty or doesn't have a specific label span
      const label = el.querySelector('.email-label');
      if (label) {
        // Keep the label but maybe append email if requested?
        // User asked to "affiche l'e-mail bonjour@candc.ch tout en la protégant"
        // I will keep the label for the button, and show email in the other links
      } else {
        el.textContent = email;
      }
    });
  })();
</script>
